		"express": "^4.20.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.11.2",
		"sqlite3": "^5.1.6"
	},
	"devDependencies": {
		"@jest/types": "^29.6.3",
		"@playwright/test": "^1.40.1",
		"@types/cors": "^2.8.17",
