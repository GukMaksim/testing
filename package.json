		"eslint-plugin-react-refresh": "^0.3.4",
		"jest": "^29.7.0",
		"jest-junit": "^16.0.0",
		"nodemon": "^3.0.2",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
