{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"outDir": "../dist/server",
		"baseUrl": ".",
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"esModuleInterop": true,
		"paths": {
			"*": ["../node_modules/*"]
		}
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifier": true,
		"compilerOptions": {
			"module": "NodeNext"
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
